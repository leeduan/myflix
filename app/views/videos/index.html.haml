- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name, category_path(category)
    .videos.row
      - category.recent_videos.each do |video|
        .video-item.col-xs-6.col-sm-3.col-md-2
          = link_to video do
            %img(src="#{video.small_cover.thumb}")
