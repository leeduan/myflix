%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, style: :horizontal, left: 'col-sm-2', right: 'col-sm-10', html: { 'data-js' => 'true' } do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: 'Email Address'
          = f.password_field :password
          = f.text_field :full_name, label: 'Full Name'
          = f.hidden_field :invitation_id, value: @user.invitation_id
        %fieldset.credit_card
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISH_KEY']}" data-name="MyFLiX Sign Up Charge" data-description="$9.99 to sign up for amazing videos!" data-amount="999")
        /%fieldset(class='actions control-group col-sm-offset-2')
        /= f.submit 'Sign Up'
