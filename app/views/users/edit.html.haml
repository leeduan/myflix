= render 'shared/form_validation'

%section.account.container
  .row
    .col-sm-10.col-md-8.col-sm-offset-1.col-md-offset-2
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-4', control_col: "col-sm-8", html: { 'data-js' => true } do |f|
        %header
          %h1 Your Account
        %fieldset
          = f.email_field :email, label: 'Email Address'
          = f.password_field :password
          = f.password_field :password_confirmation, label: 'Password Confirmation'
          = f.text_field :full_name, label: 'Full Name'
        %fieldset.form-group.action
          .col-sm-8.col-sm-offset-4
            = f.submit 'Update', class: 'btn btn-default'
            = link_to 'Cancel', home_path
