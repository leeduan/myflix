%section.admin_payments
  .container
    .row
      .col-sm-10.col-md-8.col-sm-offset-1.col-md-offset-2
        %section.payment_history
          %ul.nav.nav-tabs.hidden-xs
            %li.active
              %a Recent Payments
            %li
              = link_to 'Add a New Video', new_admin_video_path
          %table.table
            %thead
              %tr
                %th.hidden-xs Name
                %th Email
                %th Amount
                %th.hidden-xs Reference ID
            %tbody
              - @payments.each do |payment|
                %tr
                  %td
                    = payment.user.full_name
                  %td
                    = payment.user.email
                  %td $#{payment.amount.to_f / 100.0}
                  %td
                    = payment.reference_id
