%section#top-header.row
  %h1.col-sm-6.col-md-2
    = link_to 'MyFLiX', (logged_in? ? home_path : front_path)
  - if logged_in?
    %ul.col-sm-6.col-md-4.clearfix
      %li= link_to 'Videos', front_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    = form_tag search_videos_path, class: 'col-sm-6 col-md-4' do
      .form-group
        = text_field_tag 'search_terms', nil, placeholder: 'Search for videos here', class: 'form-control'
        = button_tag 'Search', class: 'btn btn-default'
    #user_links.col-sm-6.col-md-2
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Hi, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Invite a Friend', invite_path
              = link_to 'Account', edit_user_path(current_user)
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', signout_path
